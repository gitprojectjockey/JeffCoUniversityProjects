<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>
    <meta charset="utf-8" />
</head>
<body style="padding-top:20px">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <table class="table">
                <thead>
                    <tr>
                        <td>
                            <h4>User Registration</h4>
                        </td>
                        <td colspan="2">
                            @Html.ActionLink("Go To Login", "ShowLoginPartial", "Home", new { @class = "btn btn-default pull-right" })
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width:160px">
                            <h5>Email</h5>
                        </td>
                        <td>
                            <input class="form-control" type="text" id="txtEmail" placeholder="Email" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h5>Password</h5>
                        </td>
                        <td>
                            <input class="form-control" type="password" id="txtPassword" placeholder="Password" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h5>Confirm Password</h5>
                        </td>
                        <td>
                            <input class="form-control" type="password" id="txtConfirmPassword" placeholder="Confirm Password" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="button" id="btnRegister" value="Register" class="btn btn-default" />
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="modal fade" tabindex="-1" id="successModal" data-keyboard="false" data-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div>
                                <button type="button" class="close" data-dismiss="modal">
                                    &times;
                                </button>
                                <h4 class="modal-title">Success</h4>
                            </div>
                            <div class="modal-body">
                                <h4 class="modal-title">Registration Successful</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnCloseDialog" class="btn btn-default" data-dismiss="modal">
                                    Close
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="validationError" class="alert alert-danger collapse">
                <a id="linkCollapseValidationError" class="close" href="#">&times;</a>
                <div id="errorMessage"></div>
            </div>
        </div>
    </div>
</body>
</html>

